#!/bin/sh
set -euo pipefail

sudo apt update
sudo apt upgrade
sudo apt install -y gh zsh gcc
gh auth login
chsh -s $(which zsh)
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

mkdir Configurations
cd Configurations
git clone ssh://git@github.com/EskelinenAntti/git-configuration.git
(cd git-configuration && make)
git clone ssh://git@github.com/EskelinenAntti/zsh-configuration.git
(cd zsh-configuration && make)
git clone ssh://git@github.com/EskelinenAntti/tmux-configuration.git
(cd tmux-configuration && make)
git clone ssh://git@github.com/EskelinenAntti/neovim-configuration.git
(cd neovim-configuration && make)
